<h1>Registration</h1>

  <form action="/user" method="POST">
    <%= csrf_meta_tags %>
    
    <input type="text" name="user[name]" placeholder="Name">
    <br>
    <input type="email" name="user[email]" placeholder="Email">
    <br>
    <input type="number" name="user[contact]" placeholder="Contact Number">
    <br>
    <input type="password" name="user[address]" placeholder="Password">
    <br>
    <input type="submit" name="submit" class="submit">
  </form>
  
</body>
</html>



